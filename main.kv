#:import Label kivy.uix.label.Label
WindowManager:
    Accueil:
    UploadScreen:
    LoadDialog:

<Accueil>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Parachutage'
            font_size: 30
        BoxLayout:
            Button:
                text: 'UPLOAD'
                font_size: 30
                bold: True
                background_color: "#e67507"
                on_release:
                    app.root.current = "upload"
                    root.manager.transition.direction = "left"
            Button:
                text: 'DOWNLOAD'
                font_size: 30
                bold: True
                background_color: "#3e45ff"
                on_release: app.change_fenetre(nom_fenetre="load_dialog")

<UploadScreen>:
    name: "upload"
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Upload'
            font_size: 30
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: "Fichiers déjà transmis: "
                    font_size: 20
            Button:
                text: 'Load'
                on_release: root.show_load()

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: "/home/"

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)
